<Application
    x:Class="Temas.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Temas"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary Source="Temas/ThemeDark.xaml" x:Key="Dark"/>
                <ResourceDictionary Source="Temas/ThemeLight.xaml" x:Key="Light"/>
            </ResourceDictionary.ThemeDictionaries>            
        </ResourceDictionary>
    </Application.Resources>

</Application>
